{
  "Algorithm Template": {
    "prefix": "algorithm",
    "body": [
      "algorithm ${1:AlgorithmName}",
      "    var",
      "        ${2:variables}",
      "    end var",
      "",
      "    {Code logic here}",
      "end algorithm"
    ],
    "description": "Basic template for an algorithm"
  },
  "If-Else Template": {
    "prefix": "if",
    "body": [
      "if ${1:condition} then",
      "    ${2:statements}",
      "else",
      "    ${3:statements}",
      "end if"
    ],
    "description": "Template for if-else structure"
  },
  "If Template": {
    "prefix": "if",
    "body": [
      "if ${1:condition} then",
      "    ${2:statements}",
      "end if"
    ],
    "description": "Template for if structure"
  },
  "While-Do Template": {
    "prefix": "while",
    "body": [
      "while ${1:condition} do",
      "    ${2:statements}",
      "end while"
    ],
    "description": "Template for while-do cycle"
  },
  "For-To-Do Template": {
    "prefix": "for",
    "body": [
      "for ${1:condition} to ${2:condition} do",
      "    ${3:statements}",
      "end for"
    ],
    "description": "Template for for-to-do cycle"
  },
  "Variable Template": {
    "prefix": "var",
    "body": [
      "var",
      "    ${1:variables}",
      "end var"
    ],
    "description": "Template for variables creation"
  },
  "Constant Template": {
    "prefix": "const",
    "body": [
      "const",
      "    ${1:constants}",
      "end const"
    ],
    "description": "Template for constants creation"
  },
  "Type Template": {
    "prefix": "type",
    "body": [
      "type",
      "    ${1:constants}",
      "end type"
    ],
    "description": "Template for type definition"
  },
  "Record Template": {
    "prefix": "record",
    "body": [
      "record",
      "    ${1:constants}",
      "end record"
    ],
    "description": "Template for record definition"
  },
  "Function Template": {
    "prefix": "function",
    "body": [
      "function ${1:name} (${2:params})",
      "    ${3:content}",
      "    return ${4:result}",
      "end function"
    ],
    "description": "Template for functions"
  },
  "Action Template": {
    "prefix": "action",
    "body": [
      "action ${1:name} (${2:params})",
      "    ${3:content}",
      "end action"
    ],
    "description": "Template for actions"
  }
}
