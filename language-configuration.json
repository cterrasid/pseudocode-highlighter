{
  "comments": {
    "lineComment": null,
    "blockComment": ["{", "}"]
  },
  "brackets": [
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\b(var|type|record|algorithm|if|then|function|action)\\b.*$",
    "decreaseIndentPattern": "^\\s*(end var|end type|end record|end algorithm|end if|end function|end action)\\b.*$"
  }
}
